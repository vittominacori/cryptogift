{
  "name": "cryptogift",
  "version": "1.0.0",
  "description": "An ERC721 NFT Token and Marketplace to buy and give away an Ethereum based Collectible Gift",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "lite-server",
    "test": "scripts/test.sh",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solium -d contracts",
    "lint:sol:fix": "solium -d contracts --fix",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "console": "truffle console",
    "coverage": "scripts/coverage.sh"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "erc721"
  ],
  "author": "Vittorio Minacori (https://github.com/vittominacori)",
  "repository": {
    "type": "git",
    "url": "https://github.com/vittominacori/cryptogift.git"
  },
  "homepage": "https://github.com/vittominacori/cryptogift/",
  "bugs": {
    "url": "https://github.com/vittominacori/cryptogift/issues"
  },
  "license": "MIT",
  "dependencies": {
    "openzeppelin-solidity": "^2.0.0",
    "web3": "^0.20.6"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-bignumber": "^2.0.2",
    "coveralls": "^3.0.2",
    "dotenv": "^6.1.0",
    "eslint": "^5.7.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "ethjs-abi": "^0.2.1",
    "ganache-cli": "6.1.8",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.1.8",
    "truffle": "^4.1.14",
    "truffle-hdwallet-provider": "0.0.6",
    "web3-utils": "^1.0.0-beta.36"
  }
}
